<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:gravity="end"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="До экзамена у тебя осталось времени:"
            android:textColor="@color/lavender"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Время"
            android:textColor="@color/lavender"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtCovet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Не пора бы начать заниматься?"
            android:textColor="@color/lavender"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/lavender_border"
            android:drawableLeft="@drawable/baseline_markunread_24"
            android:drawablePadding="8dp"
            android:hint="Почта"
            android:padding="8dp"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/lavender_border"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="8dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/grey" />


        <Button
            android:id="@+id/login_button"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="30dp"
            android:padding="4dp"
            android:shadowColor="#716C6C"
            android:shadowDx="20"
            android:shadowDy="15"
            android:shadowRadius="10"
            android:text="Войти"
            android:textSize="18sp"
            app:cornerRadius="30dp" />


        <Button
            android:id="@+id/login_button_auth_google"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="30dp"
            android:padding="4dp"
            android:shadowColor="#716C6C"
            android:shadowDx="20"
            android:shadowDy="15"
            android:shadowRadius="10"
            android:text="Войти через Google"
            android:textSize="18sp"
            app:cornerRadius="30dp" />

        <TextView
            android:id="@+id/signupRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Есть аккаунт? Создать"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>